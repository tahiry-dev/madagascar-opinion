<%= form_with(model: @contact, local: true) do |f| %>

  <%= render "shared/error_messages", obj: @contact %>

  <div class="field">

    <%= f.label :name %><br />
    <%= f.text_field :name %>

  </div>

  <div class="field">

    <%= f.label :email %><br />
    <%= f.text_field :email %>

  </div>

  <div class="field">

    <%= f.label :message %><br />
    <%= f.text_area :message %>

  </div>

  <div class="actions">
    <%= f.submit "Send my message"%>
  </div>
  
<% end %>