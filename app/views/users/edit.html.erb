        
        <%= render 'shared/menu', obj:@user %>

        <div class="row">

        <div class="col-md-7 offset-md-3"> 

            <h1 class="my-5">Please Upload your Pictures here</h1>

            <%= form_with(model: @user, local: true) do |f| %>
               
               <div class="form-group">

                 <%= f.label :Profile_photo %>
                 <%= f.file_field :photo %>

               </div>

               <div class="form-group">
               
                 <%= f.label :cover_image %>
                 <%= f.file_field :coverimage %>

               </div>

               <div class="form-group">
                 <%= f.submit "Upload", class: "upload-button" %>
               </div>

            <% end %>
        </div>    
      </div>

    </div>
</div>