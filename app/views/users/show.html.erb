<%= render 'shared/menu', obj: @user %> 

<div class="body-container">

  <div class="opinion-container">

    <% if @user.coverimage.attached? %>
        <p><%= image_tag @user.coverimage, class: "cover-img" %></p>
    <% else %>
        <p><%= image_tag("navigation/banner.jpg", class: "cover-img")%></p>
    <% end %>
    
    <div class="opinion-heading">
      <p class="h5">OPINIONS</p>
      <hr>
    </div>

    <div class="opinion-body ml-5">
      <div class="container">
          <%= form_with(local: true) do |f| %>
              <div class="form-group">
                <%= f.label :Share_something, class: "opinion-label" %>
                <%= f.text_field :text %>
              </div>
              <div class="form-group">
                <%= f.submit "Share", class: "opinion-sharing-button" %>
              </div>
          <% end %>
      </div>
    </div>

    <div class="opinion-list ml-5 mt-5">
      <div class="opinion-list-heading mb-2">
        <p class="h5">All <%= @user.username %> Opinions</p>
      </div>
       <% @user.opinions.each do | opinion | %>
        <div class="opinions-info">
            <div class="opinions-info-left">
              <% if @user.photo.attached? %>
                <%= image_tag @user.photo, class: "opinion-img" %>
              <% else %>
                <%= image_tag("navigation/home.jpeg", class: "opinion-img")%> 
              <% end %>
            </div>
            <div class="opinions-info-right">
              <h5><%= @user.username %></h5>
              <p><%= opinion.text %></p>
            </div>
        </div>
      <% end %>
    </div>

  </div>

  <div class="right-profile">
    <% if @user.photo.attached? %>
        <p><%= image_tag @user.photo, class: "home-img" %><span class="name ml-2"><%= @user.username %></span></p>
      <% else %>
        <p><%= image_tag("navigation/home.jpeg", class: "home-img")%><span class="name ml-2"><%= @user.username %></span></p>
      <% end %>
        <div class="relationship">
            <div class="following">
              <p class="following-stats">184</p>
              <p class="following-label">Following</p>
            </div>
            <div class="follower">
              <p class="follower-stats">823</p>
              <p class="follower-label">Followers</p>
            </div>
        </div>
  </div>
</div>